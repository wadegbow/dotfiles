{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.24/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border_padding": 8,
  "border_offset": -1,
  "border": true,
  "border_colours": {
    "single": "#FCAFFB",
    "stack": "#592E83",
    "floating": "#DDF88F",
    "monocle": "#A5C7FF"
  },
  "animation": {
    "enabled": true,
    "fps": 144,
    "duration": 100,
    "style": "EaseInSine",
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        },
        {
          "name": "V",
          "layout": "BSP"
        }
      ]
    }
  ],
  "stackbar": {
    "mode": "Never",
    "tabs": {
      "font_size": 12,
      "width": 75
    }
  },
  "floating_applications": [
    {
      "kind": "Title",
      "id": "File Explorer",
      "matching_strategy": "Equals"
    }
  ],
  "ignore_rules": [
    {
      "kind": "Title",
      "id": "Nicotine+",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Ropuka's Idle Island",
      "matching_strategy": "Equals"
    }
  ]
}
